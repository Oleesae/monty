#include "main.h"

/**
 * length_of_stack - returns the length of the stack
 * @stack: pointer to head of stack
 *
 * Return: int
 */

int length_of_stack(stack_t **stack)
{
	stack_t *head;
	int len;

	head = *stack;
	if (!head)
		return (0);
	while (head->prev != NULL)
		head = head->prev;
	len = 0;
	while (head != NULL)
	{
		head = head->next;
		len++;
	}

	return (len);
}
